<?xml version="1.0" encoding="utf-8"?>
<plasterManifest schemaVersion="1.1" templateType="Item" 
    xmlns="http://www.microsoft.com/schemas/PowerShell/Plaster/v1">
    <metadata>
        <name>NewScript</name>
        <id>a3d7e258-828b-4508-a3ae-467ed9955815</id>
        <version>1.0.0</version>
        <title>New script for MK.PowerShell.Flow project</title>
        <description>Designed to have verb-noun as the name of script.  A .ps1 and .Tests.ps1 will be created.</description>
        <author>Marc Kassay</author>
        <tags>Module, ScriptModule</tags>
    </metadata>
    <parameters>
        <!-- since this template is designed to be called via New-Script; the parameters for that function will set value for this variable/directive -->
        <parameter prompt="Enter the name of the module" type="text" name="Name" default="${PLASTER_PARAM_Name}" condition="1 -eq 2" />
    </parameters>
    <content>
        <message>
Scaffolding your PowerShell Script...

        </message>
        <templateFile source='template\Script.ps1' destination='src\${PLASTER_PARAM_ScriptCongruentPath}\${PLASTER_PARAM_ScriptName}.ps1' />
        <templateFile source='template\Script.Testz.ps1' destination='test\${PLASTER_PARAM_ScriptCongruentPath}\${PLASTER_PARAM_ScriptName}.Tests.ps1' />
        <message>

Scaffolding is completed.
        </message>
    </content>
</plasterManifest>
